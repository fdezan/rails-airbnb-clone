<div class="container padded">
  <h2> Edit the skill <strong>"<%= @my_service.description.capitalize %>"</strong>, junior! </h2>
  <br>

  <%= simple_form_for @my_service, url: my_service_path do |f| %>
    <%= f.error_notification %>
    <%= f.input :category, prompt: "Which area would you like to find projects?", collection: Service::CATEGORIES %>
    <br>
    <%= f.input :description %>
    <br>
    <%= f.input :photos, as: :attachinary %>
    <br>
    <%= f.submit "Edit skill", class: "btn btn-primary" %>
  <% end %>

</div>

<hr>
